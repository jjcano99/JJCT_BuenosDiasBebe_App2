<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.formacion.juanjosecanotena.jjct_buenosdiasbebe_app2.MainActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="PROGRAMACIÃ“N"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent" />


    <TimePicker
        android:id="@+id/tpHora"
        android:timePickerMode="spinner"
        android:numbersBackgroundColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_alignTop="@+id/tvTitulo" />

    <TextView
        android:id="@+id/tvProgramado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tpHora"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="DESACTIVADA"
        android:textSize="30sp" />


    <Button
        android:id="@+id/bProgramar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvProgramado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:width="200dp"
        android:text="ACTIVAR" />
    <!--
        <Button
            android:id="@+id/bEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bProgramar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:width="200dp"
            android:text="ELIMINAR" />
        -->

</RelativeLayout>
